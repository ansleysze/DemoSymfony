{# templates/product/customer_macros.html.twig #}

{% macro product_form(form) %}
    <div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Create Product</h2>
        
        {{ form_start(form, { 'attr': { 'class': 'space-y-4' } }) }}

        <div>
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>

        <div>
            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>

        <div>
            {{ form_label(form.price, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.price, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>

        <div class="flex justify-between items-center">
            {{ form_widget(form.submit, { 'attr': {'class': 'bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow'} }) }}

            <a href="/view" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">
                Check Products
            </a>
        </div>

        {{ form_end(form) }}

    </div>
{% endmacro %}
