{# templates/test2/index.html.twig #}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <!-- Header -->
    <div class="header bg-red-600 text-white py-4 shadow-md">
        <div class="container mx-auto px-4">
            <nav class="flex justify-between">
                <a href="/" class="text-lg font-bold text-white hover:text-gray-200">Home</a>
                <div>
                    <a href="/products" class="mr-4 text-white hover:text-gray-200">Products</a>
                    <a href="/about" class="mr-4 text-white hover:text-gray-200">About Us</a>
                    <a href="/coming-soon" class="text-white hover:text-gray-200">Coming Soon</a>
                </div>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main flex items-center justify-center min-h-screen bg-black" style="background-image: url('{{ asset('images/Night.png') }}'); background-size: cover; background-position: center;">
        <div class="border-4 border-red-600 p-10 text-center transition-all duration-300 hover:border-red-800 hover:bg-red-600">
            <h1 class="text-7xl font-bold text-red-600 hover:text-white transition-all duration-300">Persona 5 Royal</h1>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer bg-black text-white py-6">
        <div class="container mx-auto px-4 text-center">
            &copy; {{ "now"|date("Y") }} - Test2 Page
        </div>
    </div>

{% endblock %}
