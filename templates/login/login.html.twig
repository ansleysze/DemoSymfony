{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
      <link  href="{{ asset('css/style.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="heading-bar">
        <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">
        <h1 class="heading-title">Demo Symfony</h1>
    </div>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="logincontainer">
            <h1 class="h3 mb-3 font-weight-normal">LOGIN</h1>
            
            <div class="input-group">
                <label for="username" class="icon"><i class="fas fa-envelope"></i></label>
                <input type="email" placeholder="Email" value="{{ last_username }}" name="_username" id="username" class="form-control" required autofocus>
            </div>

            <div class="input-group">
                <label for="password" class="icon"><i class="fas fa-lock"></i></label>
                <input type="password" placeholder="Password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn-9" type="submit">
                Sign in
            </button>

            <a class="create-account-link" href="{{ path('register') }}">Create your Account â†’</a>
        </div>
        </div>
    </form>
{% endblock %}
