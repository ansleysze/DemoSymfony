{
	"compilerOptions": {
		"lib": ["dom", "es2015"],
		"rootDir": "../",
		"outDir": "./lib/cjs/",
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
